{% block stepListLiClass %}
    {%- if loop.index == flow.getCurrentStepNumber() -%}
        {{ ' class="active"' }}
    {%- elseif flow.isStepSkipped(loop.index) -%}
        {{ ' class=""' }}
    {%- elseif flow.isStepDone(loop.index) -%}
        {{ ' class=""' }}
    {%- endif -%}
{% endblock %}

{% block stepListAClass %}
    {%- if loop.index == flow.getCurrentStepNumber() -%}
        {{ ' class=""' }}
    {%- elseif flow.isStepSkipped(loop.index) -%}
        {{ ' class="text-muted"' }}
    {%- elseif flow.isStepDone(loop.index) -%}
        {{ ' class="text-success"' }}
    {%- endif -%}
{% endblock %}