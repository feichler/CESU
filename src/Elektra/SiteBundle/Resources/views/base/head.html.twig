<head>
    {# character set and metadata #}
    <meta charset="{{ siteBase.parameter('character_set') }}">
    {% for name, content in siteBase.parameter('metadata') %}
        <meta name="{{ name }}" content="{{ content }}">
    {% endfor %}

    {# favicon #}
    <link rel="icon" type="image/x-icon" href="{{ asset(siteBase.parameter('favicon')) }}"/>

    {# Include the page title #}
    {% include "ElektraSiteBundle:base:title.html.twig" %}

    {# Include the stylesheets #}
    {% include "ElektraSiteBundle:base:styles.html.twig" %}


    {# Include the scripts #}
    {% include "ElektraSiteBundle:base:scripts.html.twig" %}
    {#{% block javascripts %}#}
    <script type="text/javascript">
        jQuery(document).ready(function() {
            jQuery('.audit-tooltip').tooltip();
            jQuery('.date-tooltip').tooltip();
            //jQuery('[data-toggle="confirmation"]').confirmation();
        });
    </script>
    {#{% endblock javascripts %}#}
</head>