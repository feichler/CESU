    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% else %}
    {% javascripts filter="jsminplus,uglifyjs2" combine=true output="js/jquery.js"
    '../vendor/frameworks/jquery/jquery.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endif %}



