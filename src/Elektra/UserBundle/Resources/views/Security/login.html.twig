{% extends "ElektraUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12" role="form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ siteLanguage.required('common.user.login.username', true) }}</label>

            <div class="col-sm-10">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                       placeholder="{{ siteLanguage.required('common.user.login.username', true) }}"/>
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">{{ siteLanguage.required('common.user.login.password', true) }}</label>

            <div class="col-sm-10">
                <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="{{ siteLanguage.required('common.user.login.password', true) }}   "/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <div class="checkbox">
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                        {{ siteLanguage.required('common.user.login.remember', true) }}
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12 text-right">
                <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ siteLanguage.required('common.user.login.submit', true) }}"/>
            </div>
        </div>
    </form>
{% endblock fos_user_content %}