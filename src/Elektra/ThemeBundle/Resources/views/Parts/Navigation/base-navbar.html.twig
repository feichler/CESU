{% set collapseId = 'top-navbar' %}

<nav id="nav-main" class="navbar navbar-default" role="navigation">
    <div class="container">

        {# Header part - responsive button & optional brand #}
        <div class="navbar-header">
            {# Responsive Button #}
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#{{ collapseId }}">
                <span class="sr-only">
                    {% trans %}site.generic.toggle_nav{% endtrans %}
                </span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            {# Brand Item (optional) #}
            {% block navbar_brand %}
                {# check if a brand-item should be rendered #}
                {% if theme.pageVar('brand.name') is not null and theme.pageVar('brand.name')|trans != theme.pageVar('brand.name') %}
                    {% set route = '#' %}
                    {% if theme.pageVar('brand.route') is not null %}
                        {% set route = path(theme.pageVar('brand.route')) %}
                    {% endif %}
                    <a href="{{ route }}" class="navbar-brand">
                        {{ theme.pageVar('brand.name')|trans }}
                    </a>
                {% endif %}
            {% endblock navbar_brand %}
        </div>

        {# collapsible part - menus #}
        <div class="navbar-collapse collapse" id="{{ collapseId }}">
            {# left menu part #}
            {% block navbar_left %}
                <div class="navbar-left">
                    {% block navbar_left_content %}
                    {% endblock navbar_left_content %}
                </div>
            {% endblock navbar_left %}

            {# right menu part #}
            {% block navbar_right %}
                <div class="navbar-right">
                    {% block navbar_right_content %}
                    {% endblock navbar_right_content %}
                </div>
            {% endblock navbar_right %}
        </div>

    </div>
</nav>