{% set collapseId = 'navbar-coll' %}
<nav id="nav-main" class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#{{ collapseId }}">
                <span class="sr-only">
                    {{ page.lang('toggle_navbar') }}
                </span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {% block navbar_brand %}
                {% if page.lang('brand_name') is not empty %}
                    {% set route = '#' %}
                    {% if page.variable('brand_route') is not empty %}
                        {% set route = path(page.variable('brand_route')) %}
                    {% endif %}
                    <a href="{{ route }}" class="navbar-brand">
                        {{ page.lang('brand_name') }}
                    </a>
                {% endif %}
            {% endblock navbar_brand %}
        </div>

        <div class="navbar-collapse collapse" id="{{ collapseId }}">
            {% block navbar_left %}
                <div class="navbar-left">
                    {% block navbar_left_content %}
                    {% endblock navbar_left_content %}
                </div>
            {% endblock navbar_left %}
            {% block navbar_right %}
                <div class="navbar-right">
                    {% block navbar_right_content %}
                    {% endblock navbar_right_content %}
                </div>
            {% endblock navbar_right %}
        </div>
    </div>
</nav>